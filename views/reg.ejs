<% layout('layout') -%>
    <% if( errorMsgFlash.length != 0 ){ %>
                <div class="alert alert-error alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <p> <%= errorMsgFlash %></p>
                </div>
     <% } %>
    <% if( successMsgFlash.length != 0 ){ %>
                <div class="alert alert-successerror alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <p> <%= successMsgFlash %></p>
                </div>
     <% } %>
    <form class="form-horizontal" method="post" id="user-reg-form">
        <fieldset>
            <legend>User Registration</legend>
            <div class="control-group">
                <label class="control-label" for="username">User Name</label>
                <div class="controls">
                    <input type="text" class="input-xlarge" id="username" name="username">
                    <p class="help-block">Your User Name</p>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="password">Password</label>
                <div class="controls">
                    <input type="password" class="input-xlarge" id="password" name="password">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="password-repeat">Repeat Password</label>
                <div class="controls">
                    <input type="password" class="input-xlarge" id="password-repeat" name="password-repeat">
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary" id="submit-button" >Register!</button>
            </div>

        </fieldset>
    </form>
    <script src="/javascripts/test.js"></script> 
